<Window x:Class="RandomForest.SamplesBrowseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomForest"
        mc:Ignorable="d"
        Title="Samples Browser" Height="386" Width="327" Closing="Window_Closing">
    <StackPanel>
        <TextBlock x:Name="headerTextBlock" TextWrapping="Wrap" Text="Select the sample you want to browse." Margin="10,0"/>
        <ComboBox x:Name="SampleComboBox" HorizontalAlignment="Stretch" Margin="10,5" VerticalAlignment="Top" SelectionChanged="SampleComboBox_SelectionChanged"/>
        <TextBlock x:Name="SampleTextBlock" Margin="10,5" VerticalAlignment="Stretch" TextWrapping="Wrap" Text="TextBlock" Background="#FFDAF2FF"/>
    </StackPanel>
</Window>
