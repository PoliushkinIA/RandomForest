<Window x:Class="RandomForest.SamplesBrowseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomForest"
        mc:Ignorable="d"
        Title="Samples Browser" Height="345" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="57*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="SampleComboBox" Margin="10,10,20,0" VerticalAlignment="Top" SelectionChanged="SampleComboBox_SelectionChanged" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="SampleTextBlock" Margin="10,48,0,20" TextWrapping="Wrap" Text="TextBlock" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" HorizontalAlignment="Left" Width="158"/>

    </Grid>
</Window>
