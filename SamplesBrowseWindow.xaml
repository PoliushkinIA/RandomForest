<Window x:Class="RandomForest.SamplesBrowseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomForest"
        mc:Ignorable="d"
        Title="Samples Browser" Height="345" Width="300">
    <StackPanel>
        <ComboBox x:Name="SampleComboBox" HorizontalAlignment="Stretch" Margin="5,5,5,5" VerticalAlignment="Top" SelectionChanged="SampleComboBox_SelectionChanged"/>
        <TextBlock x:Name="SampleTextBlock" Margin="5,5,5,5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="TextBlock" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}"/>
    </StackPanel>
</Window>
