<Window x:Class="RandomForest.TestSampleExtractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomForest"
        mc:Ignorable="d"
        Title="Test samples uploader" Height="181.395" Width="300" Closing="Window_Closing">
    <Grid>
        <Button x:Name="extractSamplesButton" Content="Extract samples" Margin="10,10,10,0" VerticalAlignment="Top" Click="extractSamplesButton_Click"/>
        <TextBox x:Name="samplesFilePathTextBox" Height="56" Margin="10,35,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
        <TextBlock x:Name="statusTextBlock" Margin="10,96,10,0" TextWrapping="Wrap" Text="Input correct path to the file, containing test samples. Then press &quot;Extract samples&quot; button." VerticalAlignment="Top" Height="44" Background="#FFCDCDCD"/>

    </Grid>
</Window>
